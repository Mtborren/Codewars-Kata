  function padIt(str,n){
    let count = 1;
    let new_str = [str]
    while(count <= n){
      if(count % 2 != 0){
        new_str.unshift("*")
        count += 1
      } else if(count % 2 == 0){
        new_str.push("*")
        count += 1
      }
    }
    return new_str.join("")
  }
