8

    def calculator(x,y,op):
        if str(x).isnumeric() and str(y).isnumeric():
            return x + y if op == "+" else x - y if op == "-" else x * y if op == "*" else x / y if op == "/" else "unknown value"
        else:
            return "unknown value"
