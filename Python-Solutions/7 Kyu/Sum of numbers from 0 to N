7

    def show_sequence(n):
        num = []
        total = 0
        if n == 0:
            return "0=0"
        elif n > 0:
            total += sum(range(0, n+1))
            for nums in range(0, n+1):
                num.append(str(nums))
            numlist = "+".join(num)
            return numlist + " = " + str(total)
        else:
            return str(n)+ "<" + "0"
