7

    def even_numbers(arr,n):
        count = 0
        newarr = []
        while count < n:
            for x in arr[::-1]:
                if x % 2 == 0 and len(newarr) < n:
                    newarr.append(x)
                    count += 1
        return newarr[::-1]
